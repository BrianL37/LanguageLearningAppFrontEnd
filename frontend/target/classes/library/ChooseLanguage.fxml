<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ChooseLanguageController">
    <!-- Title -->
    <Label text="Choose Your Language" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4A90E2;" />

    <!-- Language Buttons -->
    <HBox alignment="CENTER" spacing="20.0">
        <!-- German Language Button -->
        <Button fx:id="selectGermanButton" 
                text="German" 
                style="-fx-background-color: #EDEDED; -fx-border-color: #CCCCCC; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 8 20 8 20; -fx-text-fill: #333333;" 
                onAction="#selectGerman" />

        <!-- Spanish Language Button -->
        <Button fx:id="selectSpanishButton" 
                text="Spanish" 
                style="-fx-background-color: #EDEDED; -fx-border-color: #CCCCCC; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 8 20 8 20; -fx-text-fill: #333333;" 
                onAction="#selectSpanish" />

        <!-- French Language Button -->
        <Button fx:id="selectFrenchButton" 
                text="French" 
                style="-fx-background-color: #EDEDED; -fx-border-color: #CCCCCC; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 8 20 8 20; -fx-text-fill: #333333;" 
                onAction="#selectFrench" />
    </HBox>

    <!-- Back to Home Button -->
    <Button fx:id="goToHomeButton" 
            text="Back to Home" 
            style="-fx-background-color: #FFCCCC; -fx-border-color: #FF6666; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 10 20 10 20; -fx-text-fill: #CC0000;" 
            onAction="#goToHome" />

    <!-- Padding -->
    <padding>
        <Insets top="20.0" right="40.0" bottom="20.0" left="40.0" />
    </padding>
</VBox>
