<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ChooseDifficultyController" style="-fx-background-color: #ffffff; -fx-padding: 40;">
    <!-- Header Section -->
    <Text text="Choose Difficulty" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: #8CE1F5;" />

    <!-- Difficulty Buttons Section -->
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="easyButton" text="Easy" onAction="#selectEasy"
                style="-fx-font-size: 18px; -fx-background-color: #8CE1F5; -fx-text-fill: white; 
                       -fx-border-radius: 10; -fx-padding: 15;" />
        <Button fx:id="mediumButton" text="Medium" onAction="#selectMedium"
                style="-fx-font-size: 18px; -fx-background-color: #FFD700; -fx-text-fill: white; 
                       -fx-border-radius: 10; -fx-padding: 15;" />
        <Button fx:id="hardButton" text="Hard" onAction="#selectHard"
                style="-fx-font-size: 18px; -fx-background-color: #FF4500; -fx-text-fill: white; 
                       -fx-border-radius: 10; -fx-padding: 15;" />
    </HBox>

    <!-- Back Button -->
    <Button text="Back to Homepage" onAction="#goToHomepage"
            style="-fx-font-size: 18px; -fx-background-color: #8CE1F5; -fx-text-fill: white; 
                   -fx-border-radius: 10; -fx-padding: 15;" />
</VBox>

