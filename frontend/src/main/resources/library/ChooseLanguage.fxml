<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox fx:id="root" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ChooseLanguageController">
    <!-- Title -->
    <Label text="Choose Your Language" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #8CE1F5;" />

<!-- Language Buttons -->
<HBox alignment="CENTER" spacing="20.0">
    <!-- German Language Button -->
    <Button fx:id="selectGermanButton" 
            text="German" 
            style="-fx-font-size: 18px; -fx-background-color: #8CE1F5; -fx-text-fill: white; 
                   -fx-border-radius: 10; -fx-padding: 15;" 
            onAction="#selectGerman" />

    <!-- Spanish Language Button -->
    <Button fx:id="selectSpanishButton" 
            text="Spanish" 
            style="-fx-font-size: 18px; -fx-background-color: #8CE1F5; -fx-text-fill: white; 
                   -fx-border-radius: 10; -fx-padding: 15;" 
            onAction="#selectSpanish" />

    <!-- French Language Button -->
    <Button fx:id="selectFrenchButton" 
            text="French" 
            style="-fx-font-size: 18px; -fx-background-color: #8CE1F5; -fx-text-fill: white; 
                   -fx-border-radius: 10; -fx-padding: 15;" 
            onAction="#selectFrench" />
</HBox>

<!-- Back to Home Button -->
<Button fx:id="goToDifficultyButton" 
        text="Choose Difficulty" 
        style="-fx-font-size: 18px; -fx-background-color: #8CE1F5; -fx-text-fill: white; 
               -fx-border-radius: 10; -fx-padding: 15;" 
        onAction="#goToChooseDifficulty" />

    <!-- Padding -->
    <padding>
        <Insets top="20.0" right="40.0" bottom="20.0" left="40.0" />
    </padding>
</VBox>
