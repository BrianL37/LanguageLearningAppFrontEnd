<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.SettingsController">
    <!-- Screen Title -->
    <Label text="Settings" styleClass="settings-title" />

    <!-- Notifications Toggle -->
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label text="Notifications:" styleClass="settings-label" />
        <CheckBox fx:id="notificationsToggle" />
    </HBox>

    <!-- Light Mode Toggle -->
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label text="Light Mode:" styleClass="settings-label" />
        <CheckBox fx:id="lightModeToggle" />
    </HBox>

    <!-- Text to Speech Toggle -->
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label text="Text to Speech:" styleClass="settings-label" />
        <CheckBox fx:id="textToSpeechToggle" />
    </HBox>

    <!-- Back Button -->
    <Button text="Back to Home" onAction="#goToHome" styleClass="back-button" />

    <padding>
        <Insets top="20.0" right="40.0" bottom="20.0" left="40.0" />
    </padding>
</VBox>