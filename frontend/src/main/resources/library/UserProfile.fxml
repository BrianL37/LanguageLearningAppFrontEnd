<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.UserProfileController" style="-fx-padding: 30; -fx-background-color: #8CE1F5;">
    <!-- Header Section -->
    <Text text="User Profile" style="-fx-font-size: 35px; -fx-text-fill: #8CE1F5;" />

    <!-- User Information Section -->
    <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 20; -fx-background-color: #8CE1F5; -fx-border-radius: 10; -fx-background-radius: 10;">
        <TextField fx:id="nameField" promptText="Enter full name" style="-fx-font-size: 20px; -fx-background-color: #8CE1F5; -fx-text-fill: black;" />
        <TextField fx:id="usernameField" promptText="Enter username" style="-fx-font-size: 20px; -fx-background-color: #8CE1F5; -fx-text-fill: black;" />
        <TextField fx:id="emailField" promptText="Enter email" style="-fx-font-size: 20px; -fx-background-color: #8CE1F5; -fx-text-fill: black;" />
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Save Changes" onAction="#saveChanges" 
                style="-fx-font-size: 14px; -fx-background-color: #8CE1F5; -fx-text-fill: white; -fx-padding: 10;" />
        <Button text="Homepage" onAction="#goToHomepage" 
                style="-fx-font-size: 14px; -fx-background-color: #8CE1F5; -fx-text-fill: white; -fx-padding: 10;" />
    </HBox>
</VBox>
