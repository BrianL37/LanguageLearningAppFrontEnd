<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.QuestionController">
    <Label fx:id="questionTypeLabel" text="QuestionType" />
    
<StackPane fx:id="flashcardPane"  
            style="-fx-background-color: lightblue;"
            prefWidth="500" prefHeight="200" 
            maxHeight="200" maxWidth="500" 
            minHeight="200" minWidth="500">
    <Label fx:id="flashcardLabel" 
           text="Your text here" 
           style="-fx-text-fill: white;" 
           alignment="CENTER" />
    <TextArea fx:id="questionPrompt" 
              text="Prompt goes here" 
              editable="false" 
              wrapText="true" 
              prefWidth="500" 
              prefHeight="100" 
              styleClass="filled-text-area" />
</StackPane>
    
    <TextArea fx:id="questionCorrectAnswerBox" editable="false" maxHeight="50" maxWidth="500" minHeight="50" minWidth="500" prefHeight="50" prefWidth="500" styleClass="filled-text-area" text="Correct answer goes here" visible="false" wrapText="true" />
    
<VBox fx:id="multipleChoiceContainer" alignment="CENTER" spacing="10" visible="false">
    <RadioButton fx:id="option1" text="1" />
    <RadioButton fx:id="option2" text="2" />
    <RadioButton fx:id="option3" text="3" />
    <RadioButton fx:id="option4" text="4" />
</VBox>

    <VBox fx:id="matchingContainer" visible="false">
        <!-- Matching content goes here -->
    </VBox>

        <TextField fx:id="fillBlankUserInput" maxHeight="25" maxWidth="500" minHeight="25" minWidth="500" prefHeight="25" prefWidth="500" promptText="Your answer here..." visible="false" />

<GridPane alignment="CENTER" hgap="10" vgap="10">
    <Button fx:id="interactButton" onAction="#handleClick" text="Submit" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <VBox minHeight="20" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <columnConstraints>
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints> <!-- Spacer -->
</GridPane>
    
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</VBox>
